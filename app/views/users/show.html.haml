.mypage-default
  %header.mypage-header
    .mypage-header__upper
      %h1.mypage-header__upper__image
        = image_tag "logo.png", class:"mypage-image", alt:"logo-image"
      %from.mypage-header__search
        %input.mypage-header__search__input{:name => "keyword", :placeholder => "何かお探しですか？", :type => "search", :value => ""}/
        %i.fas.fa-search
    .mypage-header__bottom
      %nav.b-left
        %ul.header-nav
          %li
            %h2.header-nav-category
              %a.header-nav-category-list
              %i.fas.fa-list
              %span
                カテゴリーから探す
          %li
            %h2.header-nav-bland
              %a.header-nav-bland-list
              %i.fas.fa-tags
              %span
                ブランドから探す
      .b-right
        %ul.header-nav-user
          %li
            %a.like-list
              %i.far.fa-heart
              %span
                いいね！一覧
          %li
            %a.notice-list
              %i.far.fa-bell
              %span
                お知らせ
          %li
            %a.todo-list
              %i.fas.fa-check
              %span
                やることリスト
          %li
            %a.mypage-link
              %i.far.fa-user-circle
              %span
                マイページ
  %nav.page-links
    %ul
      %li{:itemprop => "itemListElement", :itemscope => "", :itemtype => "https://schema.org/ListItem"}
        %a{:href => "/", :itemprop => "item"}
          %span{:itemprop => "name"} フリマアプリ
        %meta{:content => "2", :itemprop => "position"}
      %li{:itemprop => "itemListElement", :itemscope => "", :itemtype => "https://schema.org/ListItem"}
        %i.fas.fa-angle-right
        %span{:itemprop => "name"} マイページ
        %meta{:content => "2", :itemprop => "position"}/

  %main.mypage-container
    .mypage-contain
      %section.mypage-contain__status
        %a
          %figure
            = image_tag "abe.png", class:"mypage-image", alt:"user-image"
          %h2
            = @user.nickname
          .mypage-value
            %div
              評価
              %span
                0
            %div
              出品数
              %span
                0
      %section.mypage-contain__notice-todo
        %input#notice{:checked => "checked", :name => "tab_item1", :type => "radio"}/
        %label.tab_item{:for => "notice"} お知らせ
        %input#todo{:name => "tab_item1", :type => "radio"}/
        %label.tab_item{:for => "todo"} やることリスト
        #notice_content.tab_content
          .tab_content_description
            %p.c-txtsp お知らせはありません。
        #todo_content.tab_content
          .tab_content_description
            %p.c-txtsp やることリストはありません

      %section.mypage-contain_deals
        %h2.mypage-contain_deals__header
          購入した商品
        .tab
          %input#open_trade{:checked => "checked", :name => "tab_item2", :type => "radio"}/
          %label.tab_item{:for => "open_trade"} 取引中
          %input#open_trade-past{:name => "tab_item2", :type => "radio"}/
          %label.tab_item{:for => "open_trade-past"} 過去の取引
          #open_trade_content.tab_content
            .tab_content_description
              %p.c-txtsp 取引中の商品はありません
          #open_trade-past_content.tab_content
            .tab_content_description
              %p.c-txtsp 過去の取引はありません
